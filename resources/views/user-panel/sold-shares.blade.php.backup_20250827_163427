                                            @php
                                                $status = 'pending';
                                                $statusClass = 'bg-secondary';
                                                if (isset($share->status)) {
                                                    if ($share->status === 'sold') {
                                                        $status = 'Sold';
                                                        $statusClass = 'bg-dark';
                                                    } elseif ($share->status === 'paired') {
                                                        // Show paired status for shares that have unpaid buyers
                                                        $status = 'Paired';
                                                        $statusClass = 'bg-warning';
                                                    } elseif (isset($share->is_ready_to_sell) && $share->is_ready_to_sell == 1) {
                                                        // Check if share has any successful sales (paid pairings)
                                                        $paidPairings = \App\Models\UserSharePair::where('paired_user_share_id', $share->id)
                                                            ->where('is_paid', 1)
                                                            ->count();
                                                        
                                                        if ($paidPairings > 0) {
                                                            // Share matured and has successful sales
                                                            $status = 'Matured';
                                                            $statusClass = 'bg-success';
                                                        } else {
                                                            // Share matured but no successful sales (only failed attempts or no sales)
                                                            $status = 'Available';
                                                            $statusClass = 'bg-info';
                                                        }
                                                    } elseif ($share->status === 'completed') {
                                                        $status = 'Running';
                                                        $statusClass = 'bg-info';
                                                    } elseif ($share->status === 'failed') {
                                                        $status = 'Failed';
                                                        $statusClass = 'bg-danger';
                                                    }
                                                }
                                            @endphp
                                            <span class="badge {{ $statusClass }}">
                                                {{ $status }}
                                            </span>
                                        </td>
                                        <td>
                                            @if(isset($share->is_ready_to_sell) && $share->is_ready_to_sell == 1)
                                                <span class="countdown-timer matured">Share Matured</span>
                                            @elseif(isset($share->status) && $share->status === 'completed' && isset($share->start_date) && isset($share->period))
                                                <span class="countdown-timer" id="sold-share-timer{{ $share->id ?? 0 }}">Loading...</span>
                                            @elseif(isset($share->status))
                                                @if($share->status === 'paired')
                                                    <span class="countdown-timer waiting" style="color: #f39c12;">Waiting for payments</span>
                                                @elseif($share->status === 'pending')
                                                    <span class="countdown-timer waiting" style="color: #3498db;">Waiting for pairing</span>
                                                @elseif($share->status === 'pairing')
                                                    <span class="countdown-timer waiting" style="color: #3498db;">Finding pairs</span>
                                                @elseif($share->status === 'failed')
                                                    <span class="countdown-timer failed" style="color: #e74c3c;">Transaction failed</span>
                                                @else
                                                    <span class="countdown-timer" style="color: #95a5a6;">{{ ucfirst($share->status) }}</span>
                                                @endif
                                            @else
                                                <span class="countdown-timer" style="color: #95a5a6;">Status unknown</span>
                                            @endif
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ route('sold-share.view', $share->id ?? 1) }}" class="btn btn-info btn-sm">Details</a>
                                            </div>
                                        </td>
                                    </tr>
                                @endforeach
                            @else
                                <tr>
                                    <td colspan="10" class="text-center py-4">
