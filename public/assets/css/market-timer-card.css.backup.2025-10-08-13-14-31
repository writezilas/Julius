/* Responsive Design */
@media (max-width: 768px) {
    .floating-market-timer {
        top: 50%; /* Position at middle of screen */
        right: 10px;
        left: auto;
        width: 200px;
        min-width: 200px;
        max-width: 200px;
        transform: translate(100%, -50%); /* Center vertically and slide from right */
    }
    
    .floating-market-timer.show {
        transform: translate(0, -50%); /* Slide in while staying vertically centered */
    }
    
    .floating-market-timer.hide {
        transform: translate(100%, -50%); /* Slide out while staying vertically centered */
    }
    
    .timer-card-body {
        padding: 12px 14px;
    }
    
    .market-close-message {
        font-size: 11px;
        margin-bottom: 8px;
    }
    
    .timer-display {
        gap: 4px;
        margin-bottom: 8px;
    }
    
    .timer-unit {
        min-width: 36px;
        padding: 6px 2px 4px;
        border-radius: 8px;
    }
    
    .timer-value {
        font-size: 16px;
        margin-bottom: 2px;
    }
    
    .timer-label {
        font-size: 8px;
    }
    
    .timer-separator {
        font-size: 14px;
        margin-top: -4px;
    }
    
    /* Mobile urgent styling adjustments */
    .timer-unit.urgent {
        transform: scale(1.03);
        animation-duration: 1.2s;
    }
    
    .timer-unit.urgent .timer-value {
        text-shadow: 0 0 6px rgba(239, 68, 68, 0.7);
    }
}

