/* Urgent timer styling - when 60 seconds or less remain */
.timer-unit.urgent {
    background: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.4);
    animation: urgentPulse 1.5s ease-in-out infinite;
    transform: scale(1.05);
}

.timer-unit.urgent .timer-value {
    color: #ef4444;
    text-shadow: 0 0 8px rgba(239, 68, 68, 0.6);
    animation: urgentGlow 1s ease-in-out infinite alternate;
}

.timer-unit.urgent .timer-label {
    color: #fca5a5;
}

@keyframes urgentPulse {
    0%, 100% {
        background: rgba(239, 68, 68, 0.2);
        border-color: rgba(239, 68, 68, 0.4);
        box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4);
    }
    50% {
        background: rgba(239, 68, 68, 0.3);
        border-color: rgba(239, 68, 68, 0.6);
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.2);
    }
}

@keyframes urgentGlow {
    0% {
        text-shadow: 0 0 8px rgba(239, 68, 68, 0.6);
        transform: scale(1);
    }
    100% {
        text-shadow: 0 0 12px rgba(239, 68, 68, 0.8);
        transform: scale(1.05);
    }
}

/* Urgent separator styling */
.timer-separator.urgent {
